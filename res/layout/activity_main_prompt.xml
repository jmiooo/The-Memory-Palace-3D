<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.memorymockup.MainActivity" >

    <ViewFlipper
        android:id="@+id/minimapViewFlipper"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
        <HorizontalScrollView
		    android:id="@+id/minimapScroll"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_gravity="left"
		    android:scrollbars="none" >
			<!-->LinearLayout
		        android:id="@+id/minimap"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_marginTop="10dp"
		        android:orientation="horizontal">
		    </LinearLayout-->
		    <EditText
		        android:id="@+id/enter_path_name"
			    android:layout_width="300dp"
			    android:layout_height="wrap_content"
			    android:layout_gravity="top|center"
			    android:singleLine="true"
			    android:hint="@string/enter_path_hint" />
		</HorizontalScrollView>
	    <TextView
	        android:id="@+id/statusText"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:text=""
	        android:textSize="30sp">
	    </TextView>
	    <TextView
	        android:id="@+id/promptText"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:text=""
	        android:textSize="15sp">
		</TextView>
    </ViewFlipper>
    
    <FrameLayout android:orientation="vertical"
        android:layout_width="fill_parent" 
        android:layout_height="0dip" 
        android:id="@+id/memoryFrame" 
        android:layout_weight="1.0">
	    <com.example.memorymockup.MemoryView
		   android:id="@+id/memory"
		   android:layout_width="fill_parent"
		   android:layout_height="fill_parent"
	     />
	    <com.example.memorymockup.MapView
		   android:id="@+id/map"
		   android:layout_width="140dp"
		   android:layout_height="140dp"
		   android:layout_gravity="bottom|right"
		   android:layout_marginBottom="10dp"
           android:layout_marginRight="10dp"
	     />
	    <RelativeLayout
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="top|center"
		    android:layout_marginTop="10dp"
		    android:orientation="horizontal">
			<com.example.memorymockup.CircleButton
			     android:layout_height="64dip"
			     android:layout_width="64dip"
			     android:layout_alignParentLeft="true"
			     android:layout_marginLeft="10dp"
			     android:padding="24dip"
			     android:src="@drawable/e"
			     android:onClick="enterPath"
			     android:scaleType="centerInside"
			     app:cb_color="#006600"
        		 app:cb_pressedRingWidth="8dip" />
		    <com.example.memorymockup.CircleButton
			     android:layout_height="64dip"
			     android:layout_width="64dip"
			     android:layout_alignParentRight="true"
			     android:layout_marginRight="10dp"
			     android:padding="24dip"
			     android:src="@drawable/r"
			     android:onClick="resetPath"
			     android:scaleType="centerInside"
			     app:cb_color="#CC0000"
        		 app:cb_pressedRingWidth="8dip" />
		    <com.example.memorymockup.CircleButton
			     android:layout_height="64dip"
			     android:layout_width="64dip"
			     android:layout_alignParentLeft="true"
			     android:layout_marginLeft="10dp"
			     android:layout_alignParentBottom="true"
			     android:layout_marginBottom="10dp"
			     android:padding="24dip"
			     android:src="@drawable/c"
			     android:onClick="showPromptForEntering"
			     android:scaleType="centerInside"
			     app:cb_color="#CCCC00"
        		 app:cb_pressedRingWidth="8dip" />
	    </RelativeLayout>
	</FrameLayout>
    
    <!-->Button
	     android:layout_height="wrap_content"
	     android:layout_width="300dp"
	     android:layout_marginBottom="5dp"
	     android:text="@string/entry"
	     android:onClick="enterPath" />

    <Button
	     android:layout_height="wrap_content"
	     android:layout_width="300dp"
	     android:layout_marginBottom="5dp"
	     android:text="@string/reset"
	     android:onClick="resetPath" /-->
    
</LinearLayout>